class Solution {
    public ListNode reverseBetween(ListNode head, int left, int right) {
        if(head==null) return null;
        if(head.next==null || left == right) return head;
        
        ListNode prev=null;
        ListNode cur = head;
        
        while(left>1){
            prev=cur;
            cur = cur.next;
            left--;
            right--;
            
        }
        ListNode temp;
        ListNode start = prev;
        ListNode tail=cur;
        while(right>0){
            temp=cur.next;
            cur.next = prev;
            prev=cur;
            cur = temp;
            right--;
        }
        if(start!=null){
            start.next = prev;
            
        }
        else{
            head = prev;
        }
        
        tail.next = cur;
        return head;
    }
}
